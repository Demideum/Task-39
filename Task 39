namespace Task_39
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player();
            Player player1 = new Player(0000001, "Алекс", 40, "Человек", "Волшебник");

            player.ShowInfo();
            player1.ShowInfo();
        }
    }

    class Player
    {
        private int _id;
        public string Name;
        public int Age;
        public string Race;
        public string WarriorClass;

        public Player(int id, string name, int age, string race, string warriorClass)
        {
            _id = id;
            Name = name;
            Age = age;
            Race = race;
            WarriorClass = warriorClass;
        }

        public Player()
        {
            _id = 00000000;
            Name = "Боб";
            Age = 18;
            Race = "Человек";
            WarriorClass = "Воин";
        }

        public void ShowInfo()
        {
            Console.WriteLine($"\nID - {_id} \nИмя - {Name} \nВозраст - {Age} \nРаса - {Race} \nКласс воина - {WarriorClass}");
        }
    }
}
